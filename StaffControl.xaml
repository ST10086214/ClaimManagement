<UserControl x:Class="ClaimManagement.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock Text="Welcome to the Home Section" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <StackPanel DockPanel.Dock="Left" Width="150" Background="Aqua">
            <TextBlock Text="Dashboard" FontSize="16" FontWeight="Bold" Margin="10" TextAlignment="Center"></TextBlock>
            <Button Content="Home" Height="40" Click="Home_Click"/>
            <Button Content="Staff" Height="40" Click="Staff_Click"/>
            <Button Content="Claims" Height="40" Click="Claims_Click"/>
            <Button Content="Lecturer" Height="40" Click="Lecturer_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
